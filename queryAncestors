queryAncestors(ID; IDField; parentField):

If(
	IsEmpty(ID);
	"";

	Let(

		[ 	
		~parent= parentField;
  		$$ancestors=	
			Case(
				IsEmpty(~parent); $$ancestors;
				~parent & "Â¶" & $$ancestors
			)
		];

		If(
			IsEmpty(~parent);
			Let(
				[
				~ancestors=$$ancestors; 
				$$ancestors = ""
				];
				~ancestors
			);
			queryAncestors(~parent;IDField;parentField)
		)		
	)
)
